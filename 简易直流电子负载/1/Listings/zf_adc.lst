   61          //  @brief      ADC转换一次
   62          //  @param      adcn            选择ADC通道
   63          //  @param      resolution      分辨率
   64          //  @return     void
   65          //  Sample usage:               adc_convert(ADC_P10, ADC_10BIT);
   66          //-------------------------------------------------------------------------------------------------------
             -------------
   67          unsigned int adc_once(ADCN_enum adcn,ADCRES_enum resolution)
   68          {
   69   1              unsigned int adc_value;
   70   1              
   71   1              ADC_CONTR &= (0xF0);                    //清除ADC_CHS[3:0] ： ADC 模拟通道选择位
   72   1              ADC_CONTR |= adcn;
   73   1              
   74   1              ADC_CONTR |= 0x40;                      // 启动 AD 转换
   75   1              while (!(ADC_CONTR & 0x20));    // 查询 ADC 完成标志
   76   1              ADC_CONTR &= ~0x20;                     // 清完成标志
   77   1              
   78   1              adc_value = ADC_RES;                    //存储 ADC 的 12 位结果的高 4 位
   79   1              adc_value <<= 8;
   80   1              adc_value |= ADC_RESL;                  //存储 ADC 的 12 位结果的低 8 位
   81   1              
   82   1              ADC_RES = 0;
   83   1              ADC_RESL = 0;
   84   1              
   85   1              adc_value >>= resolution;               //取多少位
   86   1              
   87   1      
   88   1              return adc_value;
   89   1      }


