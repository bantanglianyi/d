   27          //  @brief      ADC初始化
   28          //  @param      adcn            选择ADC通道
   29          //  @param      speed                   ADC时钟频率
   30          //  @return     void
   31          //  Sample usage:               adc_init(ADC_P10,ADC_SYSclk_DIV_2);//初始化P1.0为ADC功能,ADC时钟频率：SYS
             -clk/2
   32          //-------------------------------------------------------------------------------------------------------
             -------------
   33          void adc_init(ADCN_enum adcn,ADC_SPEED_enum speed)
   34          {
   35   1              ADC_CONTR |= 1<<7;                              //1 ：打开 ADC 电源
   36   1              
   37   1              ADC_CONTR &= (0xF0);                    //清除ADC_CHS[3:0] ： ADC 模拟通道选择位
   38   1              ADC_CONTR |= adcn;
   39   1              
   40   1              if((adcn >> 3) == 1) //P0.0
   41   1              {
   42   2                      //IO口需要设置为高阻输入
   43   2                      P0M0 &= ~(1 << (adcn & 0x07));
   44   2                      P0M1 |= (1 << (adcn & 0x07));
   45   2              }
   46   1              else if((adcn >> 3) == 0) //P1.0        
   47   1              {
   48   2                      //IO口需要设置为高阻输入
   49   2                      P1M0 &= ~(1 << (adcn & 0x07));
   50   2                  P1M1 |= (1 << (adcn & 0x07));
   51   2              }
   52   1      
   53   1              ADCCFG |= speed&0x0F;                   //ADC时钟频率SYSclk/2/speed&0x0F;
